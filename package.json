{
  "name": "quackdas",
  "version": "0.6.9",
  "description": "Quackdas - Qualitative Data Analysis Software (REFI-QDA compatible)",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "cli": "node tools/quackdas-cli.js",
    "lint": "eslint .",
    "check:syntax": "node --check main.js preload.js js/*.js eslint.config.js",
    "check:lint": "eslint .",
    "check:audit:prod": "npm audit --omit=dev",
    "check:all": "npm run check:syntax && npm run check:lint && npm run check:audit:prod",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build-all": "npm run dist"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0",
    "eslint": "^10.0.0"
  },
  "build": {
    "appId": "se.staffanedling.quackdas",
    "productName": "Quackdas",
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "styles.css",
      "js/**/*",
      "assets/**/*",
      "semantic/**/*",
      "package.json",
      "!**/.DS_Store",
      "!**/._*",
      "!**/*.map",
      "!.github{,/**}",
      "!agent{,/**}",
      "!tests{,/**}",
      "!tools{,/**}",
      "!CHANGELOG*.md",
      "!ENGINEERING_NOTES.md",
      "!WORKLOG_LOCAL.md",
      "!AGENTS.md",
      "!README.md",
      "!INSTALL.txt",
      "!quackdas.zip",
      "!**/*.zip",
      "!**/*.qdpx",
      "!**/*.pdf",
      "!**/*.{csv,tsv,xlsx,xls,sav,jsonl,parquet}",
      "!**/.env",
      "!**/.env.*",
      "!**/*.{pem,key,p12,pfx}",
      "!**/*token*",
      "!**/*secret*",
      "!**/*credential*",
      "!**/*apikey*",
      "!**/*api_key*"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    },
    "asarUnpack": [
      "**/js/pdfjs/pdf.worker.min.js",
      "**/js/pdfjs/pdf.worker.mjs"
    ]
  }
}
